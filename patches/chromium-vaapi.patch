++++ b/src/gallium/auxiliary/vl/vl_video_buffer.c
+@@ -535,5 +535,6 @@ vl_video_buffer_create_as_resource(struct pipe_context *pipe,
+    struct pipe_video_buffer vidtemplate = *tmpl;
+    vidtemplate.width = templ.width0;
